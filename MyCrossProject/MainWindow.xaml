<Window x:Class="MyCrossProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCrossProject"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Topmost="True"
        IsHitTestVisible="False"
        Title="CrossHairOverLay" WindowState="Maximized" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Color="#FFB0B0B0"
                         Opacity="0.0" />
    </Window.Background>
    <Grid>
        <Image x:Name="Crosshair" IsHitTestVisible="False" Source="pack://application:,,,/xhair.png" Height="20px"></Image>
    </Grid>
</Window>
